    <script>
        // --- DOM Elements ---
        const assessmentForm = document.getElementById('assessmentForm');
        const calculateBtn = document.getElementById('calculateBtn');
        const setGoalBtn = document.getElementById('setGoalBtn');
        const bmiResultEl = document.getElementById('bmiResult');
        const scenariosEl = document.getElementById('scenarios');
        const goalTimelineEl = document.getElementById('goalTimeline');
        
        let userData = {};

        // --- Data for Scenarios ---
        const scenarioData = {
            health: {
                '5': "You could significantly lower your risk of developing type 2 diabetes.",
                '10': "Can lead to significant improvements in cholesterol levels and further reduce your risk of heart disease.",
                '15': "Further reduces risks for several types of cancer and dramatically improves heart health."
            },
            comorbidities: {
                '5': "If you have high blood pressure, you might see a noticeable reduction in your readings. For those with pre-diabetes, this is a major step towards reversing it.",
                '10': "Many people with sleep apnea experience a reduction in symptoms. The strain on your joints, like knees and hips, could be substantially lessened.",
                '15': "Can lead to remission of type 2 diabetes in some individuals and significantly improve conditions like fatty liver disease."
            },
            functional: {
                '5': "You might find it easier to climb a flight of stairs or play with your children with less shortness of breath.",
                '10': "Activities like tying your shoes or getting in and out of a car may become noticeably easier. You might have more energy throughout the day.",
                '15': "You may feel a significant increase in your overall energy, stamina, and mobility, making daily activities much easier."
            },
            appearance: {
                '5': "Your clothes may start to fit more comfortably, and you might notice a change in your face.",
                '10': "You may notice more definition in your face and a more significant change in how your clothes fit and how you look in photos.",
                '15': "Friends and family may notice significant changes. You might need a new wardrobe!"
            }
        };

        // --- Event Listeners ---
        assessmentForm.addEventListener('submit', function(e) {
            e.preventDefault();
            // Store user data
            const weightLbs = parseFloat(document.getElementById('weight').value);
            const heightFt = parseFloat(document.getElementById('heightFt').value);
            const heightIn = parseFloat(document.getElementById('heightIn').value);

            if (isNaN(weightLbs) || isNaN(heightFt) || isNaN(heightIn) || weightLbs <= 0 || heightFt <= 0) {
                 alert("Please enter valid weight and height.");
                 return;
            }

            userData = {
                age: document.getElementById('age').value,
                gender: document.getElementById('gender').value,
                weightLbs: weightLbs,
                heightFt: heightFt,
                heightIn: heightIn,
                activityLevel: document.getElementById('activityLevel').value
            };
            
            // Show next step
            document.getElementById('step1').classList.remove('active');
            document.getElementById('step2').classList.add('active');
            document.getElementById('step2').scrollIntoView({ behavior: 'smooth' });
        });

        calculateBtn.addEventListener('click', function() {
            const selectedMotivators = Array.from(document.querySelectorAll('input[name="motivator"]:checked')).map(cb => cb.value);

            if (selectedMotivators.length === 0) {
                alert("Please select at least one motivator.");
                return;
            }

            userData.motivators = selectedMotivators;

            displayBmiAndScenarios();
            
            document.getElementById('step2').classList.remove('active');
            document.getElementById('results').classList.add('active');
            document.getElementById('step3').classList.add('active');
            document.getElementById('step4').classList.add('active');
            document.getElementById('results').scrollIntoView({ behavior: 'smooth' });
        });

        setGoalBtn.addEventListener('click', function() {
            displayTimeline();
        });
        
        // --- Functions ---
        function calculateBMI(weightLbs, heightFt, heightIn) {
            const heightTotalInches = (heightFt * 12) + heightIn;
            const bmi = (weightLbs / (heightTotalInches * heightTotalInches)) * 703;
            return parseFloat(bmi.toFixed(1));
        }

        function getBmiCategory(bmi) {
            if (bmi < 18.5) return { category: "Underweight", color: "text-blue-600" };
            if (bmi < 25) return { category: "Normal weight", color: "text-green-600" };
            if (bmi < 30) return { category: "Overweight", color: "text-yellow-600" };
            if (bmi < 35) return { category: "Obesity Class I", color: "text-orange-600" };
            if (bmi < 40) return { category: "Obesity Class II", color: "text-red-600" };
            return { category: "Obesity Class III", color: "text-red-800" };
        }

        function displayBmiAndScenarios() {
            const { weightLbs, heightFt, heightIn, motivators } = userData;
            
            // Display BMI
            const bmi = calculateBMI(weightLbs, heightFt, heightIn);
            const bmiInfo = getBmiCategory(bmi);
            bmiResultEl.innerHTML = `
                <p class="text-lg">Your estimated BMI is <strong class="text-2xl ${bmiInfo.color}">${bmi}</strong></p>
                <p class="text-md ${bmiInfo.color}">(${bmiInfo.category})</p>
            `;
            
            // Display Scenarios
            scenariosEl.innerHTML = ''; // Clear previous
            const percentages = [5, 10, 15];
            
            percentages.forEach((p, index) => {
                const lossLbs = (weightLbs * (p / 100)).toFixed(1);
                const targetWeight = (weightLbs - lossLbs).toFixed(1);
                
                let benefitsHtml = '<ul class="list-disc list-inside space-y-2 text-slate-600">';
                motivators.forEach(m => {
                    if(scenarioData[m] && scenarioData[m][p]) {
                        benefitsHtml += `<li>${scenarioData[m][p]}</li>`;
                    }
                });
                benefitsHtml += '</ul>';

                const scenarioCard = `
                    <div class="p-5 rounded-lg border border-slate-200 bg-white fade-in" style="animation-delay: ${index * 200}ms;">
                        <h3 class="text-xl font-semibold text-sky-700 mb-2">If you lose ${p}% (${lossLbs} lbs)...</h3>
                        <p class="mb-3 text-slate-500">Your new weight would be approximately <strong class="text-slate-700">${targetWeight} lbs</strong>. Potential benefits include:</p>
                        ${benefitsHtml}
                    </div>
                `;
                scenariosEl.innerHTML += scenarioCard;
            });
        }

        function displayTimeline() {
            const weeklyLoss = parseFloat(document.getElementById('weeklyLoss').value);
            if (isNaN(weeklyLoss) || weeklyLoss <= 0) {
                alert("Please enter a valid weekly loss goal.");
                return;
            }

            const loss5percent = userData.weightLbs * 0.05;
            const loss10percent = userData.weightLbs * 0.10;

            const weeksFor5 = Math.round(loss5percent / weeklyLoss);
            const weeksFor10 = Math.round(loss10percent / weeklyLoss);

            goalTimelineEl.innerHTML = `
                <div class="bg-emerald-50 border-l-4 border-emerald-500 text-emerald-800 p-4 rounded-r-lg fade-in">
                    <h4 class="font-bold text-lg mb-2">Your Projected Timeline:</h4>
                    <p>To reach your <strong>5%</strong> weight loss goal (${loss5percent.toFixed(1)} lbs), it would take approximately <strong>${weeksFor5} weeks</strong>.</p>
                    <p>To reach your <strong>10%</strong> weight loss goal (${loss10percent.toFixed(1)} lbs), it would take approximately <strong>${weeksFor10} weeks</strong>.</p>
                    <p class="mt-2 text-sm">Keep going! Consistency is the key to success.</p>
                </div>
            `;
            goalTimelineEl.scrollIntoView({ behavior: 'smooth' });
        }
        
        // Initial setup
        window.onload = () => {
             // Animate the first step in
             setTimeout(() => {
                document.getElementById('step1').classList.add('active');
             }, 100);
        };

    </script>
</body>
</html>

